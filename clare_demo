<body class="bg-gray-100 text-gray-800 flex flex-col items-center justify-center min-h-screen p-4">

    <div class="bg-white p-8 rounded-lg shadow-md text-center">
        <h1 class="text-3xl font-bold mb-4">Welcome!</h1>
        <p class="text-lg mb-6">Your Voiceflow chat widget should load shortly.</p>
        <p class="text-sm text-gray-600">If it doesn't appear, please ensure the script is correctly embedded and there are no console errors.</p>
    </div>

    <!-- Voiceflow Script -->
    <script type="text/javascript">
      (function(d, t) {
          var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
          v.onload = function() {
            window.voiceflow.chat.load({
              verify: { projectID: '6840604fb40032428dd23d72' },
              url: 'https://general-runtime.voiceflow.com',
              versionID: 'production',
              voice: { // Voice configuration added
                url: "https://runtime-api.voiceflow.com"
              }
            });
          }
          v.src = "https://cdn.voiceflow.com/widget-next/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
      })(document, 'script');
    </script>
    <!-- End of Voiceflow Script -->

</body>
